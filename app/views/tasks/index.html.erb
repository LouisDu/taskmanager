<h1>Here are all my tasks</h1>
<br>

<%= link_to 'Create a new task', '/tasks/new' %>
<br>

<ul>
  <% @tasks.each do |task|%>
  <li><%= link_to task.name, task_path(task) %>, <%= task.status%> - <%= link_to 'Edit this task', edit_task_path(task) %> - <%= link_to 'Delete this task', task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %></li>
  <% end %>
</ul>
